@page
@model LynxWebRazor.Pages.Categories.IndexModel
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6">
            <a asp-page="/Categories/Create" class="btn btn-primary">
                <i class="bi bi-patch-plus"></i> Create Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CategoryList.OrderBy(a => a.DisplayOrder))
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/Categories/edit" asp-route-ID="@item.ID" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> &nbsp;Edit
                            </a>
                            &nbsp;
                            <a asp-page="/Categories/delete" asp-route-ID="@item.ID" class="btn btn-secondary">
                                <i class="bi bi-trash"></i> &nbsp;Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>